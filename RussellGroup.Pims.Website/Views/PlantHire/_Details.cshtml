@model RussellGroup.Pims.DataAccess.Models.PlantHire

<h3>@ViewBag.Title</h3>
<h4>@Model.Plant.XPlantIds</h4>
<h4>@Model.Plant.Description</h4>

<div>
    @if (@Html.IsAction("Delete"))
    {
        <div class="alert alert-warning">
            <p>Are you sure you want to delete this hire transaction?</p>
        </div>
    }
    <hr />

    <dl class="dl-horizontal">
        <dt>
            job
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Job.Description)
        </dd>

        <dt>
            plant id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Plant.XPlantId)
        </dd>

        <dt>
            new plant id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Plant.XPlantNewId)
        </dd>

        <dt>
            plant description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Plant.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Docket)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Docket)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReturnDocket)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReturnDocket)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WhenStarted)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WhenStarted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WhenEnded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WhenEnded)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>

    <hr />

    <dl class="dl-horizontal">
        <dt>
        </dt>
        <dd>
            @using (Html.BeginForm())
            {
                if (User.IsAuthorized(Role.CanEdit))
                {
                    if (Html.IsAction("Delete"))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <text>&nbsp;</text>
                    }
                    else
                    {
                        <text>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.JobId, hireId = Model.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = Model.JobId, hireId = Model.Id }) |
                        </text>
                    }
                }
                @Html.ActionLink("Cancel", "Index", new { id = Model.JobId })
            }
        </dd>
    </dl>
</div>

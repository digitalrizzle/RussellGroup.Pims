        <dd>
            @Html.DisplayFor(model => model.WhenEnded)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

    </dl>

    <hr />

    <dl class="dl-horizontal">
        <dt>
        </dt>
        <dd>
            @using (Html.BeginForm())
            {
                if (User.IsAuthorized(Role.CanEdit))
                {
                    if (ViewBag.Title == "Details")
                    {
                        <text>@Html.ActionLink("Edit", "Edit", new { id = Model.JobId, hireId = Model.PlantHireId }) | </text>
                    }
                    else
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <text>&nbsp;</text>
                    }
                }
                @Html.ActionLink("Cancel", "Index", new { id = Model.JobId })
            }
        </dd>
    </dl>

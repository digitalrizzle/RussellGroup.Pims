@model IEnumerable<RussellGroup.Pims.DataAccess.Models.Category>

@{
    ViewBag.Title = "Categories";
}
@section head {
    @Styles.Render("~/Content/jquery.datatable.css")
}

<h2>@ViewBag.Title</h2>

@if (User.IsAuthorized(Role.CanEditCategories))
{
    <p>@Html.ActionLink("Create New", "Create")</p>
}
<table class="table display table-striped table-hover order-column table-responsive" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="text-center">
                    @if (User.IsAuthorized(Role.CanEditCategories))
                    { <text>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |</text> }
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @if (User.IsAuthorized(Role.CanEditCategories))
                    { <text> | @Html.ActionLink("Delete", "Delete", new { id = item.Id })</text> }
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    @Scripts.Render("~/bundles/jquery.datatable.js")
    <script>
        $(document).ready(function () {
            $('.table').dataTable({
                "order": [[1, "asc"]],
                "processing": true,
                "stateSave": true,
                "paginationType": 'full',
                "columnDefs": [
                    { "visible": false, "targets": [0] },
                    { "sortable": false, "targets": [3] }
                ]
            });
        });
    </script>
}
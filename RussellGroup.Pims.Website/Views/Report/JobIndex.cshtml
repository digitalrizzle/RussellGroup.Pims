@model IEnumerable<RussellGroup.Pims.DataAccess.Models.Job>

@{
    ViewBag.Title = "Reports by job";
}
@section head {
    @Styles.Render("~/Content/jquery.datatable.css")
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.XJobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectManager)
            </th>
            <th class="text-right">
                Plant
            </th>
            <th class="text-right">
                Inventory
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    @Scripts.Render("~/bundles/jquery.datatable.js")
    <script>
        $(document).ready(function () {
            $('.table').dataTable({
                "bProcessing": true,
                "bServerSide": true,
                "bStateSave": true,
                "sAjaxSource": '@Url.Content("~/Report/GetDataTableResult")',
                "sPaginationType": 'full_numbers',
                "aoColumns": [
                    { "sWidth": "0%" },
                    { "sWidth": "10%" },
                    { "sWidth": "20%" },
                    { "sWidth": "10%" },
                    { "sWidth": "10%" },
                    { "sWidth": "15%" },
                    { "sWidth": "5%", "sClass": "text-right" },
                    { "sWidth": "5%", "sClass": "text-right" },
                    { "sWidth": "25%", "sClass": "text-right" }
                ],
                "aoColumnDefs": [
                    { "bVisible": false, "aTargets": [0] },
                    { "bSortable": false, "aTargets": [6, 7, 8] }
                ],
            });
        });
    </script>
}
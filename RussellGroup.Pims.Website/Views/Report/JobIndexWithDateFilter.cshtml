@model IEnumerable<RussellGroup.Pims.DataAccess.Models.Job>

@{
    ViewBag.Title = "Reports for jobs by date";
}
@section head {
    @Styles.Render("~/Content/jquery.datatable.css")
}

<h2>@ViewBag.Title</h2>

<div class="form-horizontal" style="margin-left: -50px; margin-top: 20px">

    <div class="form-group">
        @Html.Label("Dated from:", new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            <div class="input-group">
                @Html.TextBox("WhenStarted", (ViewBag.WhenStarted as string), "{0:d/MM/yyyy}", new { @class = "form-control" })
                <span id="WhenStarted-icon" class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("to:", new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            <div class="input-group">
                @Html.TextBox("WhenEnded", (ViewBag.WhenEnded as string), "{0:d/MM/yyyy}", new { @class = "form-control" })
                <span id="WhenEnded-icon" class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

</div>

<div class="clearfix">
    <hr />
</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.XJobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenEnded)
            </th>
            <th class="text-right">
                Plant
            </th>
            <th class="text-right">
                Inventory
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    @Scripts.Render("~/bundles/jquery.datatable.js")
    <script>
        $(document).ready(function () {
            $('.table').dataTable({
                "bProcessing": true,
                "bServerSide": true,
                "bStateSave": true,
                "sAjaxSource": '@Url.Content("~/Report/GetDataTableResult?bDetailed=true")',
                "sPaginationType": 'full_numbers',
                "aoColumns": [
                    { "sWidth": "0%" },
                    { "sWidth": "10%" },
                    { "sWidth": "20%" },
                    { "sWidth": "10%" },
                    { "sWidth": "10%" },
                    { "sWidth": "5%", "sClass": "text-right" },
                    { "sWidth": "5%", "sClass": "text-right" },
                    { "sWidth": "30%", "sClass": "text-right" }
                ],
                "aoColumnDefs": [
                    { "bVisible": false, "aTargets": [0] },
                    { "bSortable": false, "aTargets": [5, 6, 7] }
                ],
                fnDrawCallback: function () {
                    $("a", "td").on("click", function (e) {
                        e.preventDefault();
                        window.open(this.href + getFilterUrlParameters(), '_blank');
                    });
                }
            });
        });

        function getFilterUrlParameters() {
            var url = '?WhenStarted=' + encodeURIComponent($('#WhenStarted').val());
            url = url + '&WhenEnded=' + encodeURIComponent($('#WhenEnded').val());

            return url;
        }
    </script>
}

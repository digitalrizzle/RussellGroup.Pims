@model RussellGroup.Pims.DataAccess.Models.User

<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HighestRole)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HighestRole.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsGroup)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsGroup)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsEnabled)
        </dd>

    </dl>

    <hr />

    <dl class="dl-horizontal">
        <dt>
        </dt>
        <dd>
            @using (Html.BeginForm())
            {
                if (ViewBag.Title == "Details")
                {
                    <text>@Html.ActionLink("Edit", "Edit", new { id = Model.UserId }) | </text>
                }
                else
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <text>&nbsp;</text>
                }
                @Html.ActionLink("Cancel", "Index", new { id = Model.UserId })
            }
        </dd>
    </dl>
</div>

@model RussellGroup.Pims.Website.Models.UserRolesViewModel
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMapTitle();
}
@section head {
    @Styles.Render("~/Content/datatables")
}

<h3>@ViewBag.Title</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table display table-striped table-hover order-column table-responsive" width="100%">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.LockoutEnabled)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "order": [[1, "asc"]],
                "processing": true,
                "stateSave": false,
                "pagingType": 'full',
                "serverSide": true,
                "ajax": "@Url.Content("~/User/GetDataTableResult")",
                "columns": [
                    { "data": "Id", "visible": false },
                    { "data": "UserName" },
                    { "data": "Role", "sortable": false },
                    { "data": "LockoutEnabled", "className": "text-center" },
                    { "data": "CrudLinks", "sortable": false, "className": "text-center" }
                ]
            });
        });
    </script>
}
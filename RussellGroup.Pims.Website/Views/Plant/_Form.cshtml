            <div class="col-md-2">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.WhenDisused, "{0:d/MM/yyyy}", new { @class = "form-control" })
                    <span class="input-group-addon">
                        <span id="WhenDisused-icon" class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.WhenPurchased, null, new { @class = "form-control-feedback" })
        </div>


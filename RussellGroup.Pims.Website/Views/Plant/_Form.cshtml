@model RussellGroup.Pims.DataAccess.Models.Plant

<h2>Plant</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@SiteMaps.Current.CurrentNode.Title</h4>
        <hr />

        @if (ViewData.ModelState.Any(f => string.IsNullOrEmpty(f.Key)))
        {
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
        }

        @Html.HiddenFor(model => model.Id)

        <div class="form-group@(ViewData.ModelState.IsValidField("XPlantId") ? string.Empty : " has-error")">
            @Html.LabelFor(model => model.XPlantId, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.XPlantId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.XPlantId, null, new { @class = "help-block form-control-feedback" })
        </div>

        <div class="form-group@(ViewData.ModelState.IsValidField("XPlantNewId") ? string.Empty : " has-error")">
            @Html.LabelFor(model => model.XPlantNewId, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.XPlantNewId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.XPlantNewId, null, new { @class = "help-block form-control-feedback" })
        </div>

        <div class="form-group@(ViewData.ModelState.IsValidField("Description") ? string.Empty : " has-error")">

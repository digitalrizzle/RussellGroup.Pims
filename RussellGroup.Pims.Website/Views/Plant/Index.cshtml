@model IEnumerable<RussellGroup.Pims.DataAccess.Models.Plant>

@{
    ViewBag.Title = "Plant";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.XPlantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XPlantNewId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDisused)
            </th>
            <th class="center">
                @Html.DisplayNameFor(model => model.IsHired)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.table').dataTable({
                "bProcessing": true,
                "bServerSide": true,
                "bStateSave": true,
                "sAjaxSource": '@Url.Content("~/Plant/GetDataTableResult")',
                "sPaginationType": 'full_numbers',
                "aoColumns": [
                    { "sWidth": "0%" },
                    { "sWidth": "10%" },
                    { "sWidth": "10%" },
                    { "sWidth": "35%" },
                    { "sWidth": "20%" },
                    { "sWidth": "5%", "sClass": "center" },
                    { "sWidth": "5%", "sClass": "center" },
                    { "sWidth": "15%", "sClass": "right" }
                ],
                "aoColumnDefs": [
                    { "bVisible": false, "aTargets": [0] },
                    { "bSortable": false, "aTargets": [6, 7] }
                ],
            });
        });
    </script>
}
@model RussellGroup.Pims.DataAccess.Models.Plant
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMapTitle();
    var hire = Model.PlantHires.FirstOrDefault();
}
@section head {
    @Styles.Render("~/Content/datatables")
}

<h3>@ViewBag.Title</h3>
<h4>@Model.XPlantId</h4>
<h5>@Model.Description</h5>

<table class="table display table-striped table-hover order-column table-responsive" width="100%">
    <thead>
        <tr>
            <th>
                plant id
            </th>
            <th>
                job id
            </th>
            <th>
                @Html.DisplayNameFor(model => hire.Docket)
            </th>
            <th>
                @Html.DisplayNameFor(model => hire.WhenStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => hire.WhenEnded)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => hire.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => hire.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $('.table').DataTable({
            "order": [[1, "asc"]],
            "processing": true,
            "stateSave": true,
            "pagingType": 'full',
            "serverSide": true,
            "ajax": "@Url.Content("~/Plant/GetPlantHireDataTableResult?id=" + Model.Id)",
            "columns": [
                { "data": "XPlantId", "name": "Plant.XPlantId" },
                { "data": "XJobId", "name": "Job.XJobId" },
                { "data": "Docket" },
                { "data": "WhenStarted" },
                { "data": "WhenEnded" },
                { "data": "Rate", "className": "text-right" },
                { "data": "Comment" },
                { "data": "CrudLinks", "sortable": false, "className": "text-right" }
            ]
        });
    </script>
}
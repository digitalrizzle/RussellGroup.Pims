@model RussellGroup.Pims.DataAccess.Models.Plant

@{
    ViewBag.Title = Model.Description;
}

<h2>@ViewBag.Title</h2>
<h4>Jobs</h4>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.PlantHires.Single().Job.XJobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantHires.Single().Job.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantHires.Single().Job.WhenStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantHires.Single().Job.WhenEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantHires.Single().Job.ProjectManager)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.table').dataTable({
                "bProcessing": true,
                "bServerSide": true,
                "bStateSave": true,
                "sAjaxSource": '@Url.Content("~/Plant/GetJobsDataTableResult?id=" + Model.PlantId)',
                "sPaginationType": 'full_numbers',
                "aoColumns": [
                    { "sWidth": "0%" },
                    { "sWidth": "10%" },
                    { "sWidth": "35%" },
                    { "sWidth": "10%" },
                    { "sWidth": "10%" },
                    { "sWidth": "30%" },
                    { "sWidth": "5%", "sClass": "right" }
                ],
                "aoColumnDefs": [
                    { "bVisible": false, "aTargets": [0] },
                    { "bSortable": false, "aTargets": [6] }
                ],
            });
        });
    </script>
}
@model RussellGroup.Pims.DataAccess.Models.Plant

@{
    ViewBag.Title = "Jobs for " + Model.Description;
    var job = Model.PlantHires.FirstOrDefault().Job;
}
@section head {
    @Styles.Render("~/Content/datatables")
}

<h2>@ViewBag.Title</h2>

<table class="table display table-striped table-hover order-column table-responsive" width="100%">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => job.XJobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => job.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => job.WhenStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => job.WhenEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => job.ProjectManager)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
    $(document).ready(function () {
        $('.table').dataTable({
            "order": [[1, "asc"]],
            "processing": true,
            "stateSave": true,
            "pagingType": 'full',
            "serverSide": true,
            "ajax": "@Url.Content("~/Plant/GetJobDataTableResult?id=" + Model.Id)",
            "columns": [
                { "data": "Id", "visible": false },
                { "data": "XJobId" },
                { "data": "Description" },
                { "data": "WhenStarted" },
                { "data": "WhenEnded" },
                { "data": "ProjectManager" },
                { "data": "CrudLinks", "sortable": false, "className": "text-center" }
            ]
        });
    });
    </script>
}
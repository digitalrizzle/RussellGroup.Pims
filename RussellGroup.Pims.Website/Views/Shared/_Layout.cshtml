<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PIMS - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("head", required: false)
    @Styles.Render("~/Content/overrides")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img id="logo" src="@Url.Content("~/Content/dominion_constructors.png")" alt="Dominion Constructors" class="pull-left" />
                <strong class="pull-left">@Html.ActionLink("PIMS", "Index", "Home", null, new { @class = "navbar-brand" })</strong>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.MvcSiteMap().Menu(false)
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-text">Hello, @User.Identity.Name!</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.IsHome == null)
        {
        <div class="breadcrumb">
            @Html.MvcSiteMap().SiteMapPath()
        </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>Russell Group &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/js")
    <script>
        var isDirty = false;
        var handler = window.attachEvent || window.addEventListener;
        var unloadEvent = window.attachEvent ? 'onbeforeunload' : 'beforeunload'; // make IE7, IE8 compitable

        handler(unloadEvent, function (e) { // for >=IE7, Chrome, Firefox
            if (isDirty) {
                var confirmationMessage = 'There are unsaved changes.';
                (e || window.handler).returnValue = confirmationMessage;
                return confirmationMessage;
            }
        });

        $("form").submit(function () { isDirty = false; });
        $("input,checkbox,textarea,radio,select").change(function () { isDirty = true; });
        $(":input[type='text']").keyup(function () { isDirty = true; }); // another IE fix
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>

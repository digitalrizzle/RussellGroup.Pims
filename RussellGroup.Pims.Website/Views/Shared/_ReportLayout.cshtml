<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PIMS - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("head", required: false)
    @Styles.Render("~/Content/report")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="container body-content">
        <div id="environment" class="pull-right">
            @System.Configuration.ConfigurationManager.AppSettings["Environment"]
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p class="left" style="float: left"><small>Russell Group &copy; @DateTime.Now.Year</small></p>
            <p class="text-right">@DateTime.Now</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
